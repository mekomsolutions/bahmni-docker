<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	
	<record id="manufacturer_partner_view" model="ir.ui.view">
		<field name="name">manufacturer.partner.view</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form"/>
		<field name="arch" type="xml">
			<xpath expr="//page[@name='sales_purchases']/group[@name='container_row_2']/group[@name='purchase']" position="after">
				<group string="Manufacturer" name="manufacturer">
					<field name="manufacturer" string="Is a Manufacturer"/>
				</group>
			</xpath>
		</field>
	</record>
	
</odoo>